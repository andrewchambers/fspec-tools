#! /bin/sh

set -eux

echo hello > foo.txt
cat <<EOF > t.fspec
foo
type=reg
source=./foo.txt

EOF

fspec-tar < t.fspec | fspec-fromtar -d data > out.fspec
dataname="$(echo data/*)"


cat <<EOF > expected.fspec
foo
type=reg
source=$dataname

EOF


test "hello" = "$(cat $dataname)"
diff -u out.fspec expected.fspec
