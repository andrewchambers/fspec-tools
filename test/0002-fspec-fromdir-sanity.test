#! /bin/sh

set -eux

umask 022

mkdir foo
touch foo/a.txt
touch foo/b.sh
chmod +x foo/b.sh
mkfifo foo/c
ln -s some/target foo/d

cat <<EOF > want.fspec
/
type=dir
mode=0755

/a.txt
type=reg
source=./foo/a.txt
mode=0644

/b.sh
type=reg
source=./foo/b.sh
mode=0755

/c
type=fifo
mode=0644

/d
type=sym
target=some/target

EOF

fspec-fromdir ./foo > got.fspec
diff -u want.fspec got.fspec
