#! /bin/sh

set -eux

umask 022

mkdir foo
touch foo/a.txt
touch foo/b.sh
chmod +x foo/b.sh
mkfifo foo/c
ln -s some/target foo/d

cat <<EOF > want.fspec
/a.txt
type=reg
mode=0644

/b.sh
type=reg
mode=0755

/c
type=fifo
mode=0644

/d
type=sym
target=some/target
mode=0777

EOF

fspec-fromdir -r ./foo > got.fspec
diff -u want.fspec got.fspec
